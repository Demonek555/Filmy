@model Filmy.Models.DodawanieFilmowViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Dodawanie filmu";
}
@using (Html.BeginForm("DodajFilm", "Filmy", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(f => f.film.Rezyser, "Podaj reżysera:")
        @Html.TextBoxFor(f => f.film.Rezyser, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.film.Tytul, "Podaj tytuł:")
        @Html.TextBoxFor(f => f.film.Tytul, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.film.Opis, "Podaj opis:")
        @Html.TextBoxFor(f => f.film.Opis, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.film.Cena, "Podaj cenę:")
        @Html.TextBoxFor(f => f.film.Cena, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Plakat, "Wybierz plakat")
        @Html.TextBoxFor(f => f.Plakat, new { Type = "file", @class = "form-control-file"  })
        </div>
    <div class="form-group">
        @foreach (var kategoria in Model.kategoria)
        {
        <div class="form-check-input">@Html.RadioButtonFor(f => f.film.KategoriaID, kategoria.Id)</div>
        <div class="form-check-label">@Html.LabelFor(f => f.film.KategoriaID, kategoria.Nazwa)</div>
        }
        </div>
    <div class="form-group">
        <button type="submit" class="btn-primary">Dodaj</button>
    </div>
        }
